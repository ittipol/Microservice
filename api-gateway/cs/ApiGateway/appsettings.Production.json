{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "UseEncryption": false,
  "AES": {
    "Secret": "AfD7tTOT0P/RDY1dpaxlo6grL1YrYU+cqIV5KyaB1qM=",
    "IV": "RVN+jIT97oHus4HimroOTA=="
  },
  "Jwt": {
    "Secret": "uDnF3+6uGj+tyvqRrzfCqc1czsKOnW8m+xv7lnOBDzuIGIkjphTa6aGjuQbbMQ79EAI22YU7bTfhTQzyqKMgBQ=="
  },
  "ReverseProxy": {
    "Routes": {
      "login-route": {
        "ClusterId": "cluster1",
        "AuthorizationPolicy": "anonymous",
        "MaxRequestBodySize" : 1000000,
        "Match": {
          "Path": "auth/login",
          "Methods" : [ "POST" ]
        },
        "Transforms": [
          { "PathPattern": "login" }
        ],
        "RateLimiterPolicy": "token"
      },
      "auth-service-route": {
        "ClusterId": "cluster1",
        "AuthorizationPolicy": "default",
        "MaxRequestBodySize" : 1000000,
        "Match": {
          "Path": "auth/{**catch-all}",
          "Methods" : [ "GET", "POST" ]
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ],
        "RateLimiterPolicy": "token"
      }
    },
    "Clusters": {
      "cluster1": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "cluster1": {
            "Address": "http://auth-service-server.auth-service.svc.cluster.local:3000"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "HttpClient": {
          "SSLProtocols": "Tls13",
          "DangerousAcceptAnyServerCertificate": false,
          "MaxConnectionsPerServer": 1024,
          "EnableMultipleHttp2Connections": true,
          "RequestHeaderEncoding": "utf-8",
          "ResponseHeaderEncoding": "utf-8"
        },
        "HttpRequest": {
          "ActivityTimeout": "00:00:30"
        }
      }
    }
  }
}